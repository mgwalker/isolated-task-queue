{
  "name": "isolated-task-queue",
  "version": "1.0.3",
  "description": "Execute tasks in an isolated process, with idle timeouts and optional process ('overheat') limit.",
  "keywords": [
    "isolated",
    "queue",
    "process"
  ],
  "bugs": {
    "url": "https://github.com/mgwalker/isolated-task-queue/issues",
    "email": "isolated-task-queue@darkcooger.net"
  },
  "main": "bin/main.js",
  "files": [
    "bin/main.js"
  ],
  "scripts": {
    "prebuild": "cooger-style src/main.js",
    "build": "babel src/main.js -o bin/main.js --no-comments",
    "test": "istanbul cover test/main.js && npm run tap",
	"tap": "tap -t600 -Rspec test/main.js"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "author": "Greg Walker <isolated-task-queue@darkcooger.net>",
  "license": "MIT",
  "dependencies": {
    "promise": "^7.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-istanbul": "^0.6.0",
    "babel-preset-es2015": "^6.3.13",
    "codeclimate-test-reporter": "^0.3.0",
    "cooger-style": "^1.0.2",
    "istanbul": "^0.4.2",
    "tap": "^5.1.1"
  },
  "repository": {
    "type": "git",
    "url": "mgwalker/isolated-task-queue"
  },
  "engines": {
    "node": ">=0.12.0"
  }
}
